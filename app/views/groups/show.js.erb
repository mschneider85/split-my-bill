$('#activity-feed').html("<%= j render '/groups/activities', group: @group, activities: @activities %>");
<% if params[:all_activities] %>
  $('#show-all-activities').hide();
  <% if @activities.count > 5 %>
    $('#show-less-activities').show();
  <% end %>
<% else %>
  $('#show-all-activities').show();
  $('#show-less-activities').hide();
<% end %>

<% if params[:tab] == 'users' %>
  $(".tab-pane.active").html("<%= j render '/groups/usertable', group: @group %>");
<% elsif params[:tab] == 'entries' %>
  $(".tab-pane.active").html("<%= j render '/groups/entrytable', group: @group %>");
<% elsif params[:tab] == 'refund' %>
  $(".tab-pane.active").html("<%= j render '/groups/liabilitytable', group: @group %>");
<% elsif params[:tab] == 'comments' %>
  $(".tab-pane.active").html("<%= j render '/comments/comments', comments: @comments %>");
<% end %>
