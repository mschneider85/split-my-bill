#info_panel
  = render 'info_panel', group: @group
.row
  .col-md-12
    .box
      .box-header
        %h3.box-title.group-name.truncate.truncate-medium
          = @group.name
        .box-tools.pull-right
          = link_to [:edit, @group], class: 'btn btn-box-tool', data: { toggle: 'modal', target: '.modal' } do
            = icon 'cog'
          %button.btn.btn-box-tool{ data: { widget: :collapse }, type: :button }
            %i.fa.fa-minus
      / /.box-header
      .box-body.no-padding
        = link_to [:new, @group, :entry, entry_type: 'expense'], class: 'btn btn-app', data: { toggle: 'modal', target: '.modal' } do
          = icon 'file-text'
          Buchung
        = link_to [:new, @group, :comment], class: 'btn btn-app', data: { toggle: 'modal', target: '.modal' } do
          = icon 'comment'
          Kommentar
        = link_to [:new, :invite, group_id: @group.id], class: 'btn btn-app', data: { toggle: 'modal', target: '.modal' } do
          = icon 'envelope'
          Einladung
        .select-wrapper
          %select.form-control#tab-select.hidden-md.hidden-lg
            %option.users.show{ value: "#tab_users" }= User.model_name.human(count: 2)
            %option.entries.show{ value: "#tab_entries" } Buchungen
            - if current_membership.liabilities.count > 0
              %option.refund.show{ value: "#tab_refund" } Zurückzahlen
            %option.comments.show{ value: "#tab_comments" } Kommentare
        .nav-tabs-custom
          %ul.nav.nav-tabs.nav-justified.hidden-xs.hidden-sm
            %li.active
              = link_to '#tab_users', data: { toggle: 'tab' } do
                = User.model_name.human(count: 2)
            %li
              = link_to '#tab_entries', data: { toggle: 'tab' } do
                Buchungen
            - if current_membership.liabilities.count > 0
              %li
                = link_to '#tab_refund', data: { toggle: 'tab' } do
                  Zurückzahlen
            %li
              = link_to '#tab_comments', data: { toggle: 'tab' } do
                Kommentare
          .tab-content
            #tab_users.tab-pane.active.fade.in
              = render 'usertable', group: @group
            / /.tab-pane
            #tab_entries.tab-pane.fade
              = render 'entrytable', group: @group
            / /.tab-pane
            - if current_membership.liabilities.count > 0
              #tab_refund.tab-pane.fade
                = render 'liabilitytable'
              / /.tab-pane
            #tab_comments.tab-pane.fade
              = render 'comments/comments', comments: @comments
          / /.tab-content
      / /.box-body
  - if @activities.any?
    .col-md-12#activity-feed
      = render 'activities', group: @group, activities: @activities

:coffee
  $(".nav-tabs a[href='#tab_users']").tab('show')

  $('select#tab-select').change ->
    href = this.options[this.selectedIndex].value
    console.log href
    $(".nav-tabs a[href='" + href + "']").tab('show')
