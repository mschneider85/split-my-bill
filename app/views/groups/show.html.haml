.row
  .col-md-12
    .box
      .box-header
        %h3.box-title= @group.name
        .box-tools.pull-right
          = link_to [:edit, @group], class: 'btn btn-box-tool', data: { toggle: 'modal', target: '.modal' } do
            = icon 'cog'
          %button.btn.btn-box-tool{ data: { widget: :collapse }, type: :button }
            %i.fa.fa-minus
      / /.box-header
      .box-body.no-padding#usertable
        .nav-tabs-custom
          %ul.nav.nav-tabs
            %li.active
              %a{ data: { toggle: 'tab' }, href: '#tab_dashboard' } Dashboard
            %li
              %a{ data: { toggle: 'tab' }, href: '#tab_entries' } Buchungen
            %li
              %a{ data: { toggle: 'tab' }, href: '#tab_users' }= User.model_name.human(count: 2)
            - if current_membership.liabilities.count > 0
              %li
                %a{ data: { toggle: 'tab' }, href: '#tab_refund' } Zurückzahlen
            %li.dropdown
              %a.dropdown-toggle{ data: { toggle: 'dropdown' }, href: "#"}
                Report
                %span.caret
              %ul.dropdown-menu
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Action
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Another action
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Something else here
                %li.divider{:role => "presentation"}
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Separated link
          .tab-content
            #tab_dashboard.tab-pane.active
              .row
                .col-md-3.col-sm-6.col-xs-12
                  .info-box.bg-red
                    %span.info-box-icon
                      = icon 'money'
                    .info-box-content
                      %span.info-box-text Gesamtkosten
                      %span.info-box-number= @report.expenses_sum
                    / /.info-box-content
                  / /.info-box
                .col-md-3.col-sm-6.col-xs-12
                  .info-box.bg-yellow
                    %span.info-box-icon
                      = icon 'users'
                    .info-box-content
                      %span.info-box-text ø Kosten / Person
                      %span.info-box-number= @report.expenses_avg
                    / /.info-box-content
                  / /.info-box
                .col-md-3.col-sm-6.col-xs-12
                  .info-box.bg-green
                    %span.info-box-icon
                      = icon 'calendar'
                    .info-box-content
                      %span.info-box-text Erste Ausgabe
                      %span.info-box-number= @report.first_expense
                    / /.info-box-content
                  / /.info-box
                .col-md-3.col-sm-6.col-xs-12
                  .info-box.bg-blue
                    %span.info-box-icon
                      = icon 'calendar'
                    .info-box-content
                      %span.info-box-text Letzte Ausgabe
                      %span.info-box-number= @report.last_expense
                    / /.info-box-content
                  / /.info-box
                .col-md-12.col-sm-12.col-xs-12
                  = link_to [:new, @group, :entry], class: 'btn btn-default', data: { toggle: 'modal', target: '.modal' } do
                    = icon 'plus'
                    Neu
            / /.tab-pane
            #tab_entries.tab-pane
              = render 'entrytable', group: @group
            / /.tab-pane
            #tab_users.tab-pane
              = render 'usertable', group: @group
            / /.tab-pane
            - if current_membership.liabilities.count > 0
              #tab_refund.tab-pane
                %table.table.table-bordered.table-hover
                  %tbody
                    - current_membership.liabilities.keys.each do |user|
                      %tr
                        %td= user.name
                        %td
                          %span.label.label-default= humanized_money_with_symbol current_membership.liabilities[user]/100.0
              / /.tab-pane
          / /.tab-content
      / /.box-body
  .col-md-6
    .box
      .box-header
        %h3.box-title= [@group.name, Invite.model_name.human(count: 2)].merge_with(" - ")
      / /.box-header
      .box-body
        = simple_form_for @invite, url: invites_path, remote: :true do |f|
          = f.input :group_id, as: :hidden, value: @invite.group_id
          = f.input :email
          = f.button :submit
      / /.box-body
