.row
  .col-md-12
    .box
      .box-header
        %h3.box-title= [@group.name, User.model_name.human(count: 2)].merge_with(" - ")
        .box-tools.pull-right
          %button.btn.btn-box-tool{ data: { widget: :collapse }, type: :button }
            %i.fa.fa-minus
      / /.box-header
      .box-body.no-padding#usertable
        = render 'usertable', group: @group
      / /.box-body
.row
  .col-md-6
    .box
      .box-header
        %h3.box-title= [@group.name, Entry.model_name.human(count: 2)].merge_with(" - ")
        .box-tools.pull-right
          %button.btn.btn-box-tool{ data: { widget: :collapse }, type: :button }
            %i.fa.fa-minus
      / /.box-header
      .box-body#entrytable
        = render 'entrytable', group: @group
      / /.box-body
  - if current_membership.liabilities.count > 0
    .col-md-6
      .box
        .box-header
          %h3.box-title RÃ¼ckzahlungen
        / /.box-header
        .box-body
          %table.table
            %tbody
              - current_membership.liabilities.keys.each do |user|
                %tr
                  %td= user.name
                  %td
                    %span.label.label-default= humanized_money_with_symbol current_membership.liabilities[user]/100.0
        / /.box-body
  .col-md-6
    .box
      .box-header
        %h3.box-title= [@group.name, Invite.model_name.human(count: 2)].merge_with(" - ")
      / /.box-header
      .box-body
        = simple_form_for @invite, url: invites_path, remote: :true do |f|
          = f.input :group_id, as: :hidden, value: @invite.group_id
          = f.input :email
          = f.button :submit
      / /.box-body
