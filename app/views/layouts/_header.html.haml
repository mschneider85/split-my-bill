%header.main-header
  / Logo
  %a.logo{:href => "index2.html"}
    / mini logo for sidebar mini 50x50 pixels
    %span.logo-mini
      %b> S
      M
      %b> B
    / logo for regular state and mobile devices
    %span.logo-lg
      %b> Split
      My
      %b> Bill
  / Header Navbar: style can be found in header.less
  %nav.navbar.navbar-static-top
    / Sidebar toggle button
    %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
      %span.sr-only Toggle navigation
    / Navbar Right Menu
    .navbar-custom-menu
      %ul.nav.navbar-nav
        / Messages: style can be found in dropdown.less
        - if current_user
          %li.dropdown.messages-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-envelope-o
              %span.label.label-success 4
            %ul.dropdown-menu
              %li.header You have 4 messages
              %li
                / inner menu: contains the actual data
                .slimScrollDiv{:style => "position: relative; overflow: hidden; width: auto; height: 200px;"}
                  %ul.menu{:style => "overflow: hidden; width: 100%; height: 200px;"}
                    %li
                      / start message
                      %a{:href => "#"}
                        .pull-left
                          %img.img-circle{:alt => "User Image", :src => "dist/img/user2-160x160.jpg"}
                        %h4
                          Support Team
                          %small
                            %i.fa.fa-clock-o
                            5 mins
                        %p Why not buy a new awesome theme?
                    / end message
                    %li
                      %a{:href => "#"}
                        .pull-left
                          %img.img-circle{:alt => "User Image", :src => "dist/img/user3-128x128.jpg"}
                        %h4
                          AdminLTE Design Team
                          %small
                            %i.fa.fa-clock-o
                            2 hours
                        %p Why not buy a new awesome theme?
                    %li
                      %a{:href => "#"}
                        .pull-left
                          %img.img-circle{:alt => "User Image", :src => "dist/img/user4-128x128.jpg"}
                        %h4
                          Developers
                          %small
                            %i.fa.fa-clock-o
                            Today
                        %p Why not buy a new awesome theme?
                    %li
                      %a{:href => "#"}
                        .pull-left
                          %img.img-circle{:alt => "User Image", :src => "dist/img/user3-128x128.jpg"}
                        %h4
                          Sales Department
                          %small
                            %i.fa.fa-clock-o
                            Yesterday
                        %p Why not buy a new awesome theme?
                    %li
                      %a{:href => "#"}
                        .pull-left
                          %img.img-circle{:alt => "User Image", :src => "dist/img/user4-128x128.jpg"}
                        %h4
                          Reviewers
                          %small
                            %i.fa.fa-clock-o
                            2 days
                        %p Why not buy a new awesome theme?
                  .slimScrollBar{:style => "width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(0, 0, 0);"}
                  .slimScrollRail{:style => "width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"}
              %li.footer
                %a{:href => "#"} See All Messages
          / Notifications: style can be found in dropdown.less
          %li.dropdown.notifications-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-bell-o
              %span.label.label-warning 10
            %ul.dropdown-menu
              %li.header You have 10 notifications
              %li
                / inner menu: contains the actual data
                .slimScrollDiv{:style => "position: relative; overflow: hidden; width: auto; height: 200px;"}
                  %ul.menu{:style => "overflow: hidden; width: 100%; height: 200px;"}
                    %li
                      %a{:href => "#"}
                        %i.fa.fa-users.text-aqua
                        5 new members joined today
                    %li
                      %a{:href => "#"}
                        %i.fa.fa-warning.text-yellow
                        Very long description here that may not fit into the
                        page and may cause design problems
                    %li
                      %a{:href => "#"}
                        %i.fa.fa-users.text-red
                        5 new members joined
                    %li
                      %a{:href => "#"}
                        %i.fa.fa-shopping-cart.text-green
                        25 sales made
                    %li
                      %a{:href => "#"}
                        %i.fa.fa-user.text-red
                        You changed your username
                  .slimScrollBar{:style => "width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(0, 0, 0);"}
                  .slimScrollRail{:style => "width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"}
              %li.footer
                %a{:href => "#"} View all
          / Tasks: style can be found in dropdown.less
          %li.dropdown.tasks-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-flag-o
              %span.label.label-danger 9
            %ul.dropdown-menu
              %li.header You have 9 tasks
              %li
                / inner menu: contains the actual data
                .slimScrollDiv{:style => "position: relative; overflow: hidden; width: auto; height: 200px;"}
                  %ul.menu{:style => "overflow: hidden; width: 100%; height: 200px;"}
                    %li
                      / Task item
                      %a{:href => "#"}
                        %h3
                          Design some buttons
                          %small.pull-right 20%
                        .progress.xs
                          .progress-bar.progress-bar-aqua{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
                            %span.sr-only 20% Complete
                    / end task item
                    %li
                      / Task item
                      %a{:href => "#"}
                        %h3
                          Create a nice theme
                          %small.pull-right 40%
                        .progress.xs
                          .progress-bar.progress-bar-green{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 40%"}
                            %span.sr-only 40% Complete
                    / end task item
                    %li
                      / Task item
                      %a{:href => "#"}
                        %h3
                          Some task I need to do
                          %small.pull-right 60%
                        .progress.xs
                          .progress-bar.progress-bar-red{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 60%"}
                            %span.sr-only 60% Complete
                    / end task item
                    %li
                      / Task item
                      %a{:href => "#"}
                        %h3
                          Make beautiful transitions
                          %small.pull-right 80%
                        .progress.xs
                          .progress-bar.progress-bar-yellow{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 80%"}
                            %span.sr-only 80% Complete
                    / end task item
                  .slimScrollBar{:style => "width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; background: rgb(0, 0, 0);"}
                  .slimScrollRail{:style => "width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 1px; background: rgb(51, 51, 51);"}
              %li.footer
                %a{:href => "#"} View all tasks
          / User Account: style can be found in dropdown.less
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = image_tag current_user.avatar_url, class: 'user-image'
              %span.hidden-xs= current_user.name
            %ul.dropdown-menu
              / User image
              %li.user-header
                = image_tag current_user.avatar_url, class: 'img-circle'
                %p
                  = current_user.name
                  %small
                    = t('messages.member_since')
                    = l(current_user.confirmed_at.to_date)
              / Menu Body
              %li.user-body
                .row
                  .col-xs-4.text-center
                    %a{:href => "#"} Followers
                  .col-xs-4.text-center
                    %a{:href => "#"} Sales
                  .col-xs-4.text-center
                    %a{:href => "#"} Friends
                / /.row
              / Menu Footer
              %li.user-footer
                .pull-left
                  = link_to edit_user_registration_path, class: 'btn btn-default btn-flat' do
                    %i.ion-gear-b
                .pull-right
                  = link_to destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' do
                    = t('actions.sign_out').humanize
        - else
          %li.user-menu
            = link_to new_user_session_path do
              = t('actions.sign_in').humanize
