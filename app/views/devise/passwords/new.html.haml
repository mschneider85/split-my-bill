.login-box
  .login-logo
    %b> Split
    My
    %b> Bill
  / /.login-logo
  .login-box-body
    %p.login-box-msg= t('.forgot_your_password', default: 'Forgot your password?')
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .row
        .col-md-12
          = f.input :email, label: false, placeholder: User.human_attribute_name(:email), autofocus: true, validate: { uniqueness: false }
          = icon('envelope fa-fw', class: 'field-addon')
        .col-md-12
          = button_tag type: 'submit', class: 'btn btn-primary' do
            = t('.send_me_reset_password_instructions', default: "Send me reset password instructions")
    .devise-links
      = render "devise/shared/links"
  / /.login-box-body
/ /.login-box
